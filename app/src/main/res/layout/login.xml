<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#324646">

    <EditText
        android:id="@+id/loginText"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColorHint="#fff"
        android:layout_marginTop="116dp"
        android:ems="10"
        android:layout_below="@+id/login"
        android:hint="Enter Your Name"
        android:inputType="text|textEmailAddress|textPersonName" />

    <TextView
        android:id="@+id/login"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:textColorHint="#fff"
        android:text="Login Id/ Email Id"
        android:textSize="50px" />

    <TextView
        android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginText"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:textSize="50px"
        android:text="Password" />

    <EditText
        android:id="@+id/password_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/loginText"
        android:layout_below="@+id/password_text"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:textColor="#ffffff"
        android:hint="Enter Password"
        android:textColorHint="#fff"
        android:inputType="textPersonName"
        android:password="true" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_input"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttoncolors2"
        android:text="Submit" />

    <Button
        android:id="@+id/Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/submit_button"
        android:layout_below="@+id/submit_button"
        android:layout_marginTop="22dp"
        android:textColor="#ffffff"
        android:background="@drawable/buttoncolors"
        android:text="Register"
        android:textSize="12dp" />
</RelativeLayout>