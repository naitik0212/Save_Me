<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#324646">

    <TextView
        android:id="@+id/headertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:shadowColor="#000000"
        android:text="Click Save Me for help! or Accept/Deny Clients request"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textColorHighlight="#ffffff"
        android:textSize="20dp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/SaveMeDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headertext"
        android:layout_centerHorizontal="true"
        android:background="#324646"
        android:contentDescription="Save Me"
        android:src="@drawable/ic_home_save_me" />

    <TextView
        android:id="@+id/ReqDetail"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_above="@+id/ETADoctor"
        android:layout_alignParentStart="true"
        android:text="..."
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/ETADoctor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="294dp"
        android:text="..."
        android:textColor="#ffffff" />

    <ProgressBar
        android:id="@+id/ETApbDoctor"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_above="@+id/CancelSaveMeDoctor"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/CancelSaveMeDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/call911"
        android:layout_alignEnd="@+id/Accept"
        android:background="@drawable/buttoncolors1"
        android:text="Cancel Request"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/CompleteSaveMeDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Deny"
        android:layout_below="@+id/ETApbDoctor"
        android:background="@drawable/buttoncolors2"
        android:text="Complete Request"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/Accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="259dp"
        android:background="@drawable/buttoncolors2"
        android:text="Accept"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/Deny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Accept"
        android:layout_toEndOf="@+id/call911"
        android:background="@drawable/buttoncolors1"
        android:text="Deny"
        android:textColor="#ffffff" />

    <ImageButton
        android:id="@+id/call911"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp"
        android:background="#324646"
        android:contentDescription="Call 911"
        android:src="@drawable/ic_call911" />


    <Button
        android:id="@+id/Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:background="@drawable/buttoncolors"
        android:text="Logout"
        android:textColor="#ffffff" />

</RelativeLayout>
